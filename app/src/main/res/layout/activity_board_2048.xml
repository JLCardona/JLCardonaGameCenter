<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".jlcardona2048.BoardActivity2048"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight=".50"
            android:orientation="vertical">

            <TextView
                android:id="@+id/currentScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4096"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/score"
                android:textAlignment="center"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight=".50"
            android:orientation="vertical">
            <TextView
                android:id="@+id/highScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4096"
                android:textAlignment="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/highScore"
                android:textAlignment="center" />
        </LinearLayout>
    </LinearLayout>

    <com.example.jlcardonagamecenter.jlcardona2048.GameBoard2048
        android:id="@+id/gameBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:boardBackground="@color/boardBackground"
        app:fieldBackground="@color/fieldBackground"
        app:boardDimension="4" />
</LinearLayout>